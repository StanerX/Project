<local:JedenViewBase x:Class="Sanatorium.Views.NewNFZView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sanatorium.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="StyleResources.xaml"/>
    </UserControl.Resources>
    <!--Full tab grid-->
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource UpperTitleLabel}" Grid.Row="0" Content="Dodaj Nową Jednostkę NFZ" />
        <!--Personal info grid-->
        <Grid Grid.Row="1" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Kod:" VerticalContentAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="2" Content="Nazwa:" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="2,0,2,0"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Kod, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
            <TextBox Grid.Row="0" Grid.Column="3"  Text="{Binding Path=Nazwa, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Województwo: "/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=Wojewodztwo, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
            
            <Label Grid.Row="1" Grid.Column="2" Content="Ulica:" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="2,0,2,0"/>
            <TextBox Grid.Row="1" Grid.Column="3"
                  Text="{Binding Path=Ulica, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <Label Grid.Row="2" Grid.Column="0" Content="Miasto:"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding Path=Miasto, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        </Grid>

    </Grid>

</local:JedenViewBase>
