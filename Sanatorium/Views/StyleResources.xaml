<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="Margin" Value=" 5 10 0 10"/>
    </Style>

    
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="BorderBrush" Value="DarkSlateGray"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="5 10 5 10"/>
    </Style>

    <Style x:Key="UpperTitleLabel" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Thin"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="DimGray"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="UpperLabel" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="Margin" Value="8 2 2 2"/>
    </Style>

      
    <Style TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Foreground" Value="DarkSlateGray" />
        <Setter Property="BorderBrush" Value="DarkGray" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Margin" Value="10 10 5 10"/>
    </Style>

    <Style TargetType="{x:Type ComboBoxItem}">
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Foreground" Value="SaddleBrown" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    
    <!--square gray radio button design-->
    <Style TargetType="{x:Type RadioButton}" >
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Template">
        <Setter.Value>
         <ControlTemplate TargetType="{x:Type RadioButton}">
          <BulletDecorator Background="White">
           <BulletDecorator.Bullet>
            <Grid Height="16" Width="16">
             <Border Name="RadioOuter" Background="White" BorderBrush="DarkGray" BorderThickness="1.5" CornerRadius="0" />
             <Border CornerRadius="0" Margin="4" Name="RadioMark" Background="DarkGray" Visibility="Hidden" />
            </Grid>
           </BulletDecorator.Bullet>
            <TextBlock Margin="4,0,0,0" Foreground="DimGray" FontFamily="Calibri">
            <ContentPresenter />
            </TextBlock>
          </BulletDecorator>
        <ControlTemplate.Triggers>
         <Trigger Property="IsChecked" Value="true">
          <Setter TargetName="RadioMark" Property="Visibility" Value="Visible"/>
          <Setter TargetName="RadioOuter" Property="BorderBrush" Value="DarkGray" />
         </Trigger>
        </ControlTemplate.Triggers>
        </ControlTemplate>
        </Setter.Value>
        </Setter>
    </Style>

    <!--date picker -->
    <Style TargetType="{x:Type DatePicker}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="BorderBrush" Value="CadetBlue"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Foreground" Value="CadetBlue"/>
        <Setter Property="Margin" Value="10 10 5 10"/>
    </Style>

    <Style TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Foreground" Value="Wheat"/>
        <Setter Property="BorderBrush" Value="CadetBlue"/>
    </Style>

    <!--to change from black to gray-->
    <Style TargetType="{x:Type Expander}">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="BorderBrush" Value="CadetBlue"/>
        <Setter Property="Margin" Value="9"/>
    </Style>

    <!--to change if you manage-->
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="LightCoral"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="{x:Type ScrollViewer}">
        <Style.Triggers>
            <Trigger Property="CanContentScroll" Value="False">
                <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="BorderBrush" Value="Wheat"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Background" Value="Green"/>
        <Setter Property="Margin" Value="1 2 2 2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>


    <Style x:Key="SearchButton" TargetType="{x:Type Button}">
        <Setter Property="BorderBrush" Value="DarkOrange"/>
        <Setter Property="Background" Value="DarkOrange"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="0 0 12 0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Content" Value="Wybierz"/>
    </Style>

    <Style TargetType="{x:Type ListBox}">
        <Setter Property="BorderBrush" Value="DarkGray"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Width" Value="310"/>
    </Style>


</ResourceDictionary>