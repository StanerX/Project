<local:JedenViewBase x:Class="Sanatorium.Views.NewStaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sanatorium.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="StyleResources.xaml"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">

        <!--Full tab grid-->
        <Grid Background="Khaki">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource UpperTitleLabel}" Grid.Row="0" Content="Dodaj Personel" />
            <!--Personal info grid-->
            <Grid Grid.Row="1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Imię:" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Imie, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" />
                <Label Grid.Row="0" Grid.Column="2" Content="Nazwisko:"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Path=Nazwisko, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" />


                <Label Grid.Row="1" Grid.Column="0" Content="Stanowisko:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=Stanowisko, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" />
                <Label Grid.Row="1" Grid.Column="2" Content="Stopień:"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Path=Stopień, UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Column="0" Grid.Row="2" Content="Specjalność:"/>
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=Specjalonosc, UpdateSourceTrigger=PropertyChanged}"  />
                <Label Grid.Column="2" Grid.Row="3" Content="Doświadczenie:"/>
                <TextBox Grid.Column="3" Grid.Row="3" Text="{Binding Path=Doswiadczenie, UpdateSourceTrigger=PropertyChanged}"  />
                
                <Button Grid.Column="3" Grid.Row="2" Style="{StaticResource SearchButton}"  Command="{Binding showTimeTableCommand}"/>

                <Label Grid.Column="0" Grid.Row="3" Content="Termin Dyżuru:"/>
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=DataDyzuru, UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Row="4" Grid.Column="0" Content="Nazwa usługi:"/>
                <ComboBox Grid.Row="4" Grid.Column="1" 
                             ItemsSource="{Binding UslugiComboboxItems}" 
                                        DisplayMemberPath="Value" SelectedValuePath="Key" 
                                        SelectedValue="{Binding Path=Id_Uslugi, Mode=TwoWay,ValidatesOnDataErrors=True}" />

            </Grid>

        </Grid>
    </ScrollViewer>
</local:JedenViewBase>
