<local:WszyscyViewBase x:Class="Sanatorium.Views.AllInvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sanatorium.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="StyleResources.xaml"/>
    </UserControl.Resources>

    <Grid>
        
        <Label Style="{StaticResource UpperTitleLabel}" Grid.Row="0" Content="Wszyscy Pacjenci" />

        <DataGrid Grid.Row="1" Background="Tan" AutoGenerateColumns="False" ItemsSource="{Binding List}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Numer" Binding="{Binding Path=Numerpelny}"/>
                <DataGridTextColumn Header="Ilość" Binding="{Binding Path=Ilosc}"/>
                <DataGridTextColumn Header="Ilosc Usług" Binding="{Binding Path=Iloscuslugi}"/>
                <DataGridTextColumn Header="Wartość Brutto" Binding="{Binding Path=Wartoscbrutto}"/>
                <DataGridTextColumn Header="Wartość Netto" Binding="{Binding Path=Wartoscnetto}"/>
                <DataGridTextColumn Header="Rabat" Binding="{Binding Path=Rabat}"/>
                <DataGridTextColumn Header="Marża" Binding="{Binding Path=Marza}"/>
                <DataGridTextColumn Header="Wystawiający Imię" Binding="{Binding Path=PersonelImie}"/>
                <DataGridTextColumn Header="Wystawiający Stanowisko" Binding="{Binding Path=PersonelStanowisko}"/>
                <DataGridTextColumn Header="Nazwa Usługi" Binding="{Binding Path=UlugiNazwa}"/>
                <DataGridTextColumn Header="Data Wypływu" Binding="{Binding Path=DataWplywu}"/>
                <DataGridTextColumn Header="Data Zatwierdzenia" Binding="{Binding Path=DataZatwierdzenia}"/>
               
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszyscyViewBase>
