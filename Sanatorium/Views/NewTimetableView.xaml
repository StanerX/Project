<local:JedenViewBase x:Class="Sanatorium.Views.NewTimetableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sanatorium.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="StyleResources.xaml"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">

        <!--Full tab grid-->
        <Grid Background="Khaki">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource UpperTitleLabel}" Grid.Row="0" Content="Dodaj Termin" />
            <!--Personal info grid-->
            <Grid Grid.Row="1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                    <RowDefinition  Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Doktor Imię:"/>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=DoktorImie, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"/>
                
               

                <Label Grid.Column="0" Grid.Row="2" Content="Doktor Stanowisko:"/>
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=DoktorStanowisko, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" />

                <Button Grid.Column="2" Grid.Row="0" Style="{StaticResource SearchButton}"  Command="{Binding showDoctorsCommand}"/>

                <Label Grid.Column="0" Grid.Row="3" Content="Doktor Nazwisko:"/>
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=DoktorNazwisko, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"/>
                
                <Label Grid.Column="0" Grid.Row="4" Content="Doktor Specjalizacja:"/>
                <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=DoktorSpecjalizacja, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"/>

                <Label Grid.Column="0" Grid.Row="5" Content="Data:"/>
                <DatePicker Grid.Column="1" Grid.Row="5" Text="{Binding Path=Data, UpdateSourceTrigger=PropertyChanged}"/>

            </Grid>

        </Grid>
    </ScrollViewer>
</local:JedenViewBase>
